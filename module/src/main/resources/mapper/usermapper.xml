<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qc.mapper.UserMapper">

    <insert id="insert" parameterType="com.qc.entity.User" useGeneratedKeys="true" keyProperty="id">

        insert into User(
        <if test="user.avatar!=null and user.avatar!=''">avatar,</if>
        <if test="user.nickName!=null and user.nickName!=''">nick_name,</if>
        <if test="user.gender!=null">gender,</if>
        <if test="user.email!=null and user.email!=''">email,</if>
        <if test="user.userIntro!=null and user.userIntro!=''">user_intro,</if>
        <if test="user.birthday!=null">birthday,</if>
        <if test="user.lastLoginIp!=null and user.lastLoginIp!=''">last_login_ip,</if>
        <if test="user.registerIp!=null and user.registerIp!=''">register_ip,</if>
        <if test="user.lastLoginTime!=null">last_login_time,</if>
        <if test="user.updateTime!=null">update_time,</if>
        <if test="user.createTime!=null">create_time,</if>
        is_deleted
        )values(
        <if test="user.avatar!=null and user.avatar!=''">#{user.avatar},</if>
        <if test="user.nickName!=null and user.nickName!=''">#{user.nickName},</if>
        <if test="user.gender!=null">#{user.gender},</if>
        <if test="user.email!=null and user.email!=''">#{user.email},</if>
        <if test="user.userIntro!=null and user.userIntro!=''">#{user.userIntro},</if>
        <if test="user.birthday!=null">#{user.birthday},</if>
        <if test="user.lastLoginIp!=null and user.lastLoginIp!=''">#{user.lastLoginIp},</if>
        <if test="user.registerIp!=null and user.registerIp!=''">#{user.registerIp},</if>
        <if test="user.lastLoginTime!=null">#{user.lastLoginTime},</if>
        <if test="user.updateTime!=null">#{user.updateTime},</if>
        <if test="user.createTime!=null">#{user.createTime},</if>
        #{user.isDeleted}
        )
    </insert>

    <update id="update" parameterType="com.qc.entity.User">
        update User set
        update_time = #{user.updatetime}
        <if test="user.avatar!=null and user.avatar!=''">,avatar=#{user.avatar}</if>
        <if test="user.nickName!=null and user.nickName!=''">,nick_name=#{user.nickName}</if>
        <if test="user.gender!=null">,gender=#{user.gender}</if>
        <if test="user.email!=null and user.email!=''">,email=#{user.email}</if>
        <if test="user.userIntro!=null and user.userIntro!=''">,user_intro=#{user.userIntro}</if>
        <if test="user.birthday!=null">,birthday=#{user.birthday}</if>
        <if test="user.lastLoginIp!=null and user.lastLoginIp!=''">,last_login_ip=#{user.lastLoginIp}</if>
        <if test="user.registerIp!=null and user.registerIp!=''">,register_ip=#{user.registerIp}</if>
        <if test="user.lastLoginTime!=null">,last_login_time=#{user.lastLoginTime}</if>
        <if test="user.createTime!=null">,create_time=#{user.createTime}</if>
        <if test="user.isDeleted!=null">,is_deleted=#{user.isDeleted}</if>
        where id =#{user.id}
    </update>

    <select id="getUserByHashMap" resultType="java.util.LinkedHashMap">
        select id,nick_name from user where nick_name like concat('%',#{nickName},'%') and is_deleted=0
    </select>
    <select id="getUserIdsByNickName" resultType="java.lang.String" parameterType="java.lang.String">
        select id from user where nick_name like concat('%',#{nickName},'%') and is_deleted=0
    </select>
    <select id="getUsersByNickName" resultType="com.qc.entity.User" parameterType="java.lang.String">
        select * from user where nick_name like concat('%',#{nickName},'%') and is_deleted=0
    </select>
    <select id="getByIds" resultType="com.qc.entity.User" parameterType="java.lang.String">
        select * from user where id in (${userIdsFromTeacher})
    </select>

    <resultMap id="UserResultMap" type="com.qc.entity.NewUser" >
        <id column="id" property="id"/>
        <result column="nick_name" property="nickName" />
    </resultMap>

</mapper>